<?xml version="1.0" encoding="UTF-8"?>
<privs>
	<!-- 一个模块作为一个权限组 -->
	<top-privilege name="在线测评" action="pojSystem">
		<!-- 第二级别显示在下拉菜单中 -->
		<priv name="查看问题" action="poj/problemList">
			<!-- 第三级别的是在页面中出现的，一般只有三级 -->
			<sub-priv name="问题列表" action="poj/problemList" />
			<sub-priv name="编辑问题" action="poj/editProblem" />
			<sub-priv name="保存问题" action="poj/saveProblem" />
			<sub-priv name="更新问题" action="poj/updateProblem" />
			<sub-priv name="删除问题" action="poj/deleteProblem" />
			<sub-priv name="解决问题" action="poj/solveProblem" />
			<sub-priv name="重解问题" action="poj/resolveProblem" />
		</priv>
		<priv name="我的成绩" action="poj/myGrade">
		</priv>
		<priv name="我的课程" action="poj/courseList">
			<!-- 第三级别的是在页面中出现的，一般只有三级 -->
			<sub-priv name="课程列表" action="poj/courseList" />
			<sub-priv name="编辑课程" action="poj/editCourse" />
			<sub-priv name="保存课程" action="poj/saveCourse" />
			<sub-priv name="更新课程" action="poj/updateCourse" />
			<sub-priv name="删除课程" action="poj/removeCourse" />
			<sub-priv name="查看详细课程信息" action="poj/viewCourse" />
			<sub-priv name="查看课程的学生列表" action="poj/viewCourseStudents" />
			<sub-priv name="参加课程" action="poj/joinCourse" />
			<sub-priv name="退出课程" action="poj/quitCourse" />
			<sub-priv name="删除课程学生" action="poj/removeCourseStudent" />
			<sub-priv name="添加学生到课程" action="poj/addStudentToCourse" />
			<sub-priv name="学生列表" action="poj/studentList" />
		</priv>
		<priv name="作业系统" action="poj/allCourse">
			<!-- 第三级别的是在页面中出现的，一般只有三级 -->
			<sub-priv name="课程的作业列表" action="poj/viewCourseHomeworks" />
			<sub-priv name="编辑作业" action="poj/editHomework" />
			<sub-priv name="保存作业" action="poj/saveHomework" />
			<sub-priv name="删除作业" action="poj/removeHomework" />
			<sub-priv name="学生完成一道作业情况列表" action="poj/homeworkSolveStatus" />
			<sub-priv name="学生所有作业完成情况" action="poj/studentSolveStatus" />
			<sub-priv name="解答作业页面" action="poj/solveHomework" />
		</priv>
	</top-privilege>
</privs>
